Options +Indexes
IndexOptions +FancyIndexing
IndexOptions +HTMLTable
IndexOptions +FoldersFirst
IndexOptions +IconsAreLinks
IndexOptions +IgnoreCase
IndexOptions +NameWidth=*
IndexOptions +SuppressHTMLPreamble
IndexOptions +SuppressDescription

HeaderName /HEADER.html
ReadmeName /FOOTER.html

# Ukryj pliki konfiguracyjne i katalogi Git z listingu
IndexIgnore .htaccess HEADER.html FOOTER.html .git .github .gitignore .gitattributes .env .env.*

# Całkowicie zablokuj dostęp do katalogów i plików Git
<DirectoryMatch "^/.*(\.git)">
    Require all denied
</DirectoryMatch>

<FilesMatch "^\.git">
    Require all denied
</FilesMatch>

# Zablokuj dostęp do katalogu .github
<DirectoryMatch "^/.*(\.github)">
    Require all denied
</DirectoryMatch>

# Zablokuj dostęp do plików .gitignore, .gitattributes itp.
<FilesMatch "^\.(git|env)">
    Require all denied
</FilesMatch>

# Zablokuj dostęp do plików konfiguracyjnych
<FilesMatch "\.(htaccess|htpasswd|ini|log|sh|sql|conf|config)$">
    Require all denied
</FilesMatch>