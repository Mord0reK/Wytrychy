Options +Indexes
IndexOptions +FancyIndexing
IndexOptions +HTMLTable
IndexOptions +FoldersFirst
IndexOptions +IconsAreLinks
IndexOptions +IgnoreCase
IndexOptions +NameWidth=*
IndexOptions +SuppressHTMLPreamble
IndexOptions +SuppressDescription

HeaderName /HEADER.html
ReadmeName /FOOTER.html

# Ukryj pliki stylowania, konfiguracyjne i katalogi Git z listingu
IndexIgnore .htaccess HEADER.html FOOTER.html \
            .git .github .gitignore .gitattributes .gitmodules \
            .env .env.* \
            node_modules package-lock.json \
            .DS_Store Thumbs.db \
            *.swp *.bak *.tmp *~ \
            .vscode .idea

# Całkowite blokady dostępu do katalogów
<DirectoryMatch "^/.*(\.git|\.github|node_modules|vendor|\.vscode|\.idea)">
    Require all denied
</DirectoryMatch>

# Blokada dostępu do plików zaczynających się od kropki
<FilesMatch "^\.(git|env|htaccess|htpasswd)">
    Require all denied
</FilesMatch>

# Opcjonalnie: Zablokuj bezpośredni dostęp do plików HEADER i FOOTER
# (mogą być używane tylko przez Apache, nie przez użytkowników)
<FilesMatch "^(HEADER|FOOTER)\.html$">
    Require all denied
</FilesMatch>
